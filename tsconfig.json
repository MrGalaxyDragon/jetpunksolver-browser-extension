{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"./node_modules"
		]
	},
	"include": [
		"src"
	]
}
